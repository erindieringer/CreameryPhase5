<% if assignments.empty? %>
  <p><em>There are no <%= state %> assignments at this time.</em></p>
<% else %>
  <h3><%= state.capitalize %> Assignments</h3>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Store</th>
        <th>Employee</th>
        <th class="centered">Pay</th>
        <th>Start Date</th>
        <% if state == 'past' %>
          <th>End Date</th>
        <% end %>
        <th>&nbsp;</th>
        <% if logged_in? && current_user.employee.role == "admin"%>
          <th>&nbsp;</th>
          <th>&nbsp;</th>
        <%end%>

      </tr>
    </thead>
    <tbody>
      <% assignments.each do |assignment| %>
        <% if current_user.employee.role == "admin" || (current_user.employee.role == "manager" && current_user.employee.current_assignment.store_id == assignment.store_id )%>
          <tr>
            <td><%= link_to assignment.store.name, store_path(assignment.store) %></td>
            <td><%= link_to assignment.employee.name, employee_path(assignment.employee) %></td>
            <td class="centered"><%= assignment.pay_level %></td>
            <td><%= assignment.start_date.strftime("%m/%d/%y") %></td>
            <% if state == 'past' %>
              <td><%= assignment.end_date.strftime("%m/%d/%y") %></td>
            <% end %>
            <td>
              <%= link_to(assignment_path(assignment), class: 'button tiny radius') do %>
                &nbsp;View&nbsp;
              <% end %>
            </td>
            <% if logged_in? && current_user.employee.role == "admin"%>
              <td>
                <%= link_to(image_tag("edit_dg.gif"), edit_assignment_path(assignment))  %>
      
              </td>
              <td>
                  <%= link_to(image_tag("remove.png"), assignment_path(assignment), confirm: 'Are you sure you wish to delete this information?', method: :delete, data: { confirm: 'Are you sure you wish to delete this information?' })  %>
              </td>
            <%end%>


          </tr>
        <%end%>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate assignments, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>  
<% end %>
<p>&nbsp;</p>