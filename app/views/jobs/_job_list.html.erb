<% if jobs.empty? %>
  <p><em>There are no <%= state %> jobs at this time.</em></p>
<% else %>
  <h3><%= state.capitalize %> Jobs</h3>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% jobs.each do |job| %>
        <tr>
          <td><%= link_to job.name, job_path(job) %></td>
          <td>
            <%= link_to(image_tag("edit_dg.gif"), edit_job_path(job))  %>
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate jobs, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>  
<% end %>
<p>&nbsp;</p>