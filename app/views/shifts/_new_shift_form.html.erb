 <div id = "new_shift">
<%= simple_form_for @shift, html: { :class => 'form-horizontal' }, remote: true do |f| %>
  
  <%= f.input :date, as: :date, start_year: Date.today.year,
                              end_year: Date.today.year+5,
                              order: [:month, :day, :year],  input_html: {class: "avg"} %>

	<%= f.input :start_time, as: :time,   input_html: {class: "avg"} %>
  <!-- Note in this case that can't use @town; use params[:town_id] -->
  <%= f.input :assignment_id, as: :hidden, input_html: { value: params[:assignment_id] } %>


  <p>&nbsp;</p>
  <div class="form-actions">
    <%= f.submit nil, class: 'button tiny radius' %>
    <%= link_to 'Cancel', employees_path, class: 'button tiny radius alert' %>
  </div>
<% end %>
</div>