 <div id = "new_store_flavor2">
<%= simple_form_for @store_flavor, html: { :class => 'form-horizontal' }, remote: true do |f| %>
  
  <%= f.input :flavor_id, label: "Flavor", collection: Flavor.active.all, input_html: {class: "avg"} %>

  <!-- Note in this case that can't use @town; use params[:town_id] -->
  <%= f.input :store_id, as: :hidden, input_html: { value: params[:store_id] } %>

  <p>&nbsp;</p>
  <div class="form-actions">
    <%= f.submit nil, class: 'button tiny radius' %>
    <%= link_to 'Cancel', store_path(params[:store_id]), class: 'button tiny radius alert' %>
  </div>
<% end %>
</div>