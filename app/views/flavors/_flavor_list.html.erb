<% if flavors.empty? %>
  <p><em>There are no <%= state %> flavors at this time.</em></p>
<% else %>
  <h3><%= state.capitalize %> Flavors</h3>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <% if logged_in? && current_user.employee.role == "admin"%>
          <th>&nbsp;</th>
          <th>&nbsp;</th>
        <%end%>
      </tr>
    </thead>
    <tbody>
      <% flavors.each do |flavor| %>
        <tr>
          <td><%= link_to flavor.name, flavor_path(flavor) %></td>
          <% if logged_in? && current_user.employee.role == "admin"%>
            <td>
              <%= link_to(image_tag("edit_dg.gif"), edit_flavor_path(flavor))  %>
            </td>
             <td>
            <%= link_to(image_tag("delete_dg.gif"), flavor_path(flavor), confirm: 'Are you sure you wish to delete this information?', method: :delete, data: { confirm: 'Are you sure you wish to delete this information?' })  %>
            </td>
          <% end %>

        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate flavors, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>  
<% end %>
<p>&nbsp;</p>