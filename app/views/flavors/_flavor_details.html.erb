<div id = "flavor_details"	>
	<h3> <%= @flavor.name %> Details </h3>
	<% unless @store_flavors.empty? %>
		<%#= render 'current_stores' %>
	<% else %>
		<p>
		<em><%= @flavor.name %> not currently assigned to any stores</em>
	</p>
	<%end%>
	
	<%= link_to(new_store_flavor_path(flavor_id: @flavor.id), id: 'new_store_flavor_link', class: 'button tiny radius', remote: true) do %>
	  Assign to New Store
	<% end %>

</div>