<div id= "current_flavs" >
<h5>Current Stores</h5>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <% if logged_in? && current_user.employee.role == "admin" %>
        <th>&nbsp;</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% unless @flavor.nil? %>
      <% @flavor.store_flavors.each do |store_flavor| %>
        <tr>
          <td><%= link_to store_flavor.store.name, store_path(store_flavor.store) %></td>
          <% if logged_in? && current_user.employee.role == "admin" %>
            <td>
                <%= link_to(image_tag("remove.png"), store_flavor_path(store_flavor), confirm: 'Are you sure you wish to delete this information?', method: :delete, data: { confirm: 'Are you sure you wish to delete this information?' })  %>
            </td>
          <%end%>
        </tr>
        <% end %>
      <% end %>
  </tbody>
</table>
</div>
