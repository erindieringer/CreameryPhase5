
<%# unless @employee.nil?%>  
<%# unless @employee.active == false %>  
<% unless @employee.current_assignment.nil? || @past_shifts.empty? %>
<div id="shifts" >
  <h3>Past Shifts</h3>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Date</th>
          <th>Time</th>
          <th>&nbsp;</th>
        </tr>
      </thead>
      <tbody>
        <% @past_shifts.each do |shift| %>
          <tr>
            <td>
              <%= shift.date.strftime("%m/%d/%y") %>
          	</td>
          	<td> <%= shift.start_time.strftime("%r")%> - <%= shift.end_time.strftime("%r")%> </td>
            <td>
                <%= link_to(shift_path(shift), class: 'button tiny radius') do %>
                  &nbsp;View&nbsp;
                <% end %>
              </td>
          </tr>
        <% end %>
      </tbody>
    </table>
     <%= will_paginate @past_shifts, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>

  <% else%>
    <em>No Past Shifts <em>
  <% end %>
  <br/>
  <br/>

  <%# end %>
<%# end %>
</div>