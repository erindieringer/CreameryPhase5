<% if logged_in? && current_user.employee.role == "admin" 	%>
	<% unless @inactive_employees.empty? %>
	  <div class="panel callout radius">
	    <h3>Inactive Employees</h3>
	    <ul>
	      <% @inactive_employees.each do |employee| %>
	        <li><%= link_to employee.name, employee_path(employee) %></li>
	      <% end %>
	    </ul>
	  </div>
	<% end %>
	<%= will_paginate @inactive_employees,:param_name => 'inactives', :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
<% end %>