<div class="row">
  <div class="small-12 columns">
    <% unless current_user.employee.current_assignment.nil?%>
      <%if !current_user.employee.current_assignment.shifts.upcoming.for_next_days(0).nil? %>
          <%= render partial: "clock_in" %>
      <%else%>
          <%= render partial: "next_shift" %>
      <% end %>
    <% end %>
  </div>

</div>
<div class="row">
  </div>

<div class="row">
  <div class="small-6 columns">
    <!-- primary partial gets displayed here in main div -->
    <%= render partial: "current_assignment" unless current_user.employee.current_assignment.nil?%>
    <!-- sometimes we want another partial below -->
    <%= render partial: "assign_history" %>

  </div>
  <div class="small-6 columns">
    <%= render partial: "upcoming_shifts" unless current_user.employee.current_assignment.nil?%>
     <%= render partial: "hours_worked" unless current_user.employee.current_assignment.nil?%>
      <%= link_to employee_path(current_user.employee_id),class: 'button radius' do %>
        &nbsp;<%= "View My Personal Information" %>
    <% end %>
  </div>
</div>
