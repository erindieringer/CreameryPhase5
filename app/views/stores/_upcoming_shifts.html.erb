 <%unless !@store.active %>
  <%unless @store_shifts.empty? %>
    <h3>Shifts this week</h3>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Date</th>
          <th>Time</th>
          <th>Employee</th>
          <th>Pay Level</th>
          <th>&nbsp;</th>
        </tr>
      </thead>
      <tbody>
        <% @store_shifts.each do |shift| %>
          <tr>
            <td>
              <%= shift.date.strftime("%m/%d/%y") %>
          	</td>
          	<td> <%= shift.start_time.strftime("%r")%> - <%= shift.end_time.strftime("%r")%> </td>
          	<td> <%= link_to shift.assignment.employee.proper_name, employee_path(shift.assignment.employee) %> </td>
            <td> <%= shift.assignment.pay_level %> </td>
            <td>
                <%= link_to(shift_path(shift), class: 'button tiny radius') do %>
                  &nbsp;View&nbsp;
                <% end %>
              </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @store_shifts, :param_name => 'upcoming_shifts',:previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>


  <%end%>
  <%end%>